@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category Page";
}
<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Category
            </a>
        </div>
    </div>

    <br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width:50%">
                        @obj.Name
                    </td>
                    <td style="width:30%">
                        @obj.DisplayOrder
                    </td>
                    <td class="d-flex justify-content-center space-between">
                        <div type="button" class="btn btn-primary d-flex justify-content-center w-50 mx-2">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" style="color: white;">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                        </div>
                        <div type="button" class="btn btn-danger d-flex justify-content-center w-50 mx-2">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" style="color: white;">
                                <i class="bi bi-pencil-square"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
